<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/LuxA"
        android:id="@+id/TitleStatusB"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="@dimen/actionbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/LuxB"
        android:id="@+id/TitleStatusA"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/TitleStatusB"
        android:layout_alignRight="@+id/TitleStatusB"
        android:layout_alignEnd="@+id/TitleStatusB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/txStatusA"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_above="@+id/TitleStatusA"
        android:layout_toRightOf="@+id/TitleStatusB"
        android:layout_toEndOf="@+id/TitleStatusB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/txStatusB"
        android:layout_alignBottom="@+id/TitleStatusA"
        android:layout_alignLeft="@+id/txStatusA"
        android:layout_alignStart="@+id/txStatusA" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="25dp"
        android:layout_alignLeft="@+id/TitleStatusB"
        android:layout_alignStart="@+id/TitleStatusB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/PercentSign"
        android:id="@+id/txPercentA"
        android:layout_above="@+id/TitleStatusA"
        android:layout_toRightOf="@+id/txStatusB"
        android:layout_toEndOf="@+id/txStatusB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/PercentSign"
        android:id="@+id/txPercentB"
        android:layout_alignBottom="@+id/TitleStatusA"
        android:layout_toRightOf="@+id/txStatusA"
        android:layout_toEndOf="@+id/txStatusA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txTemp"
        android:layout_alignBottom="@+id/txPercentA"
        android:layout_alignRight="@+id/progressBar"
        android:layout_alignEnd="@+id/progressBar" />

</RelativeLayout>